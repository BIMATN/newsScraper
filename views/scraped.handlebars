<div class="row">
	{{#each articles}}
		<div class="col-10 mx-auto">
		  <div class="card bg-warning">
		  	<div class="col-10">
		  		<h3>{{this.title}}</h3>
		  	</div>
		  	<div class="col-10">
		  		<h5>{{this.summary}}</h5>
		  	</div>
		  	<div class = "col-6 mr-auto">
		  		<a class="bg-light text-info" href="https://www.reuters.com{{this.link}}" target="_blank"><h6>Click Here if You'd Like to Know More...</h6></a>
		  	</div>
		  	<div class="col-2 mx-auto">
				<button type="button" class="btn btn-success">View Comments</button>
			</div>
		  </div>
		</div>
	{{/each}}
</div>